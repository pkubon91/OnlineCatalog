@model OnlineCatalog.Web.Main.Models.Products.IProductViewModel

@Html.AntiForgeryToken()
<div class="form-horizontal">
    @Html.EditorFor(m => m.ProductView.ProductGuid)
    @Html.EditorFor(m => m.ProductView.ShopGuid)
    @Html.EditorFor(m => m.ProductView.CreatedLogin)
    @Html.ValidationSummary(true, "Please correct fields", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.ProductView.ProductName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.ProductView.ProductName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.ProductView.ProductName, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ProductView.Description, new { htmlAttributes = new { @class = "control-label col-md-2" } })
        <div class="col-md-10">
            @Html.EditorFor(m => m.ProductView.Description, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.ProductView.Description, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ProductView.DefaultPrice, new {htmlAttributes = new {@class = "control-label col-md-2"}})
        <div class="col-md-10">
            @Html.EditorFor(m => m.ProductView.DefaultPrice, new {htmlAttributes = new {@class = "form-control"}})
            @Html.ValidationMessageFor(m => m.ProductView.DefaultPrice, "", new {@class = "text-danger"})
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ProductView.IsActive, new {htmlAttributes = new {@class = "control-label col-md-2"}})
        <div class="col-md-10">
            @Html.CheckBoxFor(m => m.ProductView.IsActive, new {htmlAttributes = new {@class = "form-control"}})
            @Html.ValidationMessageFor(m => m.ProductView.IsActive, "", new {@class = "text-danger"})
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ProductView.TaxPercent, new { htmlAttributes = new { @class = "control-label col-md-2" } })
        <div class="col-md-10">
            @Html.EditorFor(m => m.ProductView.TaxPercent, new {htmlAttributes = new {@class = "form-control"}})
            @Html.ValidationMessageFor(m => m.ProductView.TaxPercent, "", new {@class = "text-danger"})
        </div>
    </div>
</div>
