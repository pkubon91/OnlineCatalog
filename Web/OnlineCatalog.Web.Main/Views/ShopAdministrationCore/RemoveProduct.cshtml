@model OnlineCatalog.Web.Main.Models.Products.ProductViewModel

@{
    ViewBag.Title = "Remove product";
    Layout = "~/Views/Shared/_ShopAdminLayout.cshtml";
}

<h2>Remove product</h2>

    <div>
        Do you really want to remove @Model.ProductName product?
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Remove product" class="btn btn-default" onclick="@("window.location.href='" + @Url.Action("RemoveProduct", "Product", new {productGuid = Model.ProductGuid}) + "'");"/>
        </div>
    </div>
