@model OnlineCatalog.Web.Main.Models.Products.ProductCategoryViewModel

@{
    ViewBag.Title = "Edit product category";
    Layout = "~/Views/Shared/_ShopAdminLayout.cshtml";
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
}

<body>
    <h2>Edit product category</h2>
    @using (Html.BeginForm("EditProductCategory", "ProductCategories", FormMethod.Post))
    {
        Html.RenderPartial("ProductCategoryEditPage", Model);

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="EditProductCategory" class="btn btn-default" />
            </div>
        </div>
    }
</body>