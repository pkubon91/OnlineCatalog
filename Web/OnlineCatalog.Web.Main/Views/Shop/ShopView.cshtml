@model OnlineCatalog.Web.Main.Models.Groups.ShopViewModel
    
@Html.AntiForgeryToken()
<div class="form-horizontal">
    @Html.ValidationSummary(true, "Please correct fields", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.ShopName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.ShopName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.ShopName, "", new { @class = "text-danger" })
        </div>
    </div>
    @{
        Html.RenderPartial("~/Views/Shared/Address.cshtml", Model);
    }
</div>
